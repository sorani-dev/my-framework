{% extends 'layout.twig' %}

{% block title post.name %}


{% block content %}
<article class="mt-3 mb-5">
    <h1>{{ post.name }}</h1>
    <p class="text-muted">
        {% if post.categoryId %}
        <a href="{{ path_for('blog.category', { slug: post.categorySlug}) }}" aria-label="{{ post.categoryName }}">{{ post.categoryName }}</a>
        {% endif %}
        {{ post.createdAt| ago }}
    </p>
    
    {% if post.image %}
    <p><img src="{{ post.imageUrl }}" alt="{{ post.name }}" class="img-fluid w-100"></p>
    {% endif %}
    
    <p>{{ post.content | nl2br }}
    </p>
</article>
{% endblock content %}