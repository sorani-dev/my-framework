<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PHP_CodeSniffer" xsi:noNamespaceSchemaLocation="phpcs.xsd">
    <description>The coding standard for my framework.</description>
   <file>src</file>
   <file>public/index.php</file>
   <file>tests</file>
  <rule ref="PSR2">
  <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
  </rule>
    <arg name="colors"/>
    <arg value="p"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"></rule>
    <exclude-pattern>./tests/Sorani/SimpleFramework/views/*</exclude-pattern> 
    <exclude-pattern>views/*</exclude-pattern> 
    <!-- <exclude-pattern>db/seeds/*</exclude-pattern>  -->
    <!-- <exclude-pattern>db/migrations/*</exclude-pattern>  -->
</ruleset>
